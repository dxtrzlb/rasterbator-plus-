{
  "name": "rasterbator-app",
  "version": "1.0.2",
  "description": "Modern Rasterbator Desktop App",
  "author": "Maarten", 
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.rasterbator.desktop",
    "productName": "Rasterbator+",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "modules/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "portable"
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.11.0"
  }
}
